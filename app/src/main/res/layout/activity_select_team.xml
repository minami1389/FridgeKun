<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.minami1389.fridgekun.SelectTeamActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp" />

        <TextView
            android:id="@+id/teamNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userNameTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="@string/team_name" />

        <EditText
            android:id="@+id/selectTeamEditText"
            android:layout_width="250dp"
            android:layout_height="32dp"
            android:layout_below="@+id/teamNameTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/createTeamButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectTeamEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="@string/create_team" />

        <Button
            android:id="@+id/joinTeamButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createTeamButton"
            android:layout_centerHorizontal="true"
            android:text="@string/join_team" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/joinTeamButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="@string/logout" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
